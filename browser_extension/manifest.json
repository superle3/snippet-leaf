{
    "manifest_version": 3,
    "name": "Snippetleaf",
    "version": "0.0.3",
    "description": "Make typesetting LaTeX math as fast as handwriting through snippets, text expansion, and editor enhancements",
    "author": "superle3",
    "content_scripts": [
        {
            "js": ["dist/browser_extension.js"],
            "matches": ["<all_urls>"],
            "world": "MAIN"
        },
        {
            "js": ["dist/settings/content_script.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["storage"],
    "web_accessible_resources": [
        {
            "resources": [
                "dist/browser_extension.js",
                "dist/settings/content_script.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "options_page": "settings.html",
    "action": {
        "default_popup": "popup.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "snippetleaf@superle3"
        }
    },
    "update_url": "https://raw.githubusercontent.com/superle3/snippet-leaf/refs/heads/main/browser_extension/update_manifest.json"
}
