{
    "manifest_version": 3,
    "name": "Snippetleaf",
    "version": "0.0.1",
    "description": "Make typesetting LaTeX math as fast as handwriting through snippets, text expansion, and editor enhancements",
    "author": "superle3",
    "content_scripts": [
        {
            "js": ["dist/browser_extension.js"],
            "matches": ["<all_urls>"],
            "world": "MAIN"
        },
        {
            "js": ["dist/settings/content_script.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["storage"],
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        {
            "resources": [
                "dist/browser_extension.js",
                "dist/settings/content_script.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "snippet-leaf@example.com"
        }
    }
}
