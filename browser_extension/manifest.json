{
    "manifest_version": 3,
    "name": "Snippet Leaf",
    "version": "0.0.1",
    "description": "Make typesetting LaTeX math as fast as handwriting through snippets, text expansion, and editor enhancements",
    "author": "superle3",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/browser_extension.js"],
            "world": "MAIN"
        },
        {
            "js": ["dist/settings/content_script.js"],
            "matches": ["https://overleaf/project/*"],
            "run_at": "document_start"
        }
    ],
    "permissions": ["storage"],
    "options_page": "settings.html"
}
