{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2017",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "declaration": true,

        "lib": ["DOM", "ES5", "ES6", "ES7", "ES2021.String"]
    },
    "include": [
        "src/**/*.ts",
        "codemirror_extension/**/*.ts",
        "browser_extension/**/*.ts"
    ]
}
