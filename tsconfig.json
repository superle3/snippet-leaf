{
  "compilerOptions": {
    "outDir": "dist",
    "outFile": "dist/extension.js",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "system",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2021.String"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
